@model IEnumerable<BusinessLogic.Entites.Game>;

<div class="card text-center">
    <div class="card-header">
        My Cart
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <h5 class="card-title">Product List</h5>

            <ul class="list-group my-3">
                @foreach (var phone in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <partial name="_ProductCardPartial" model="@phone" />
                    </li>
                }
            </ul>

            <a asp-controller="Orders" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-bag-check"></i> Confirm
            </a>
        }
        else
        {
            <p>Looks like your cart is empty</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Browse Our Store</a>
        }
    </div>
    <div class="card-footer text-muted">
        Total items: @Model.Count()
    </div>
</div>